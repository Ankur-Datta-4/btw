{{#content "body"}}
  <div class="flex flex-col sm:flex-row p-4 mt-8">
    <div class="p-4 w-full max-w-xs">
      {{> sidebar}}
    </div>
    <div class="w-full mt-8 sm:mt-0">
      <div class="max-w-md p-4">
        <h1 class="mb-2 text-xl font-bold">All articles</h1>
        <article class="prose ">
          {{#if notes}}
            <ul>
              {{#each notes}}
                <li><a href="{{url}}">{{title}}</a></li>
              {{/each}}
            </ul>
          {{/if}}
        </article>
      </div>
    </div>
  </div>
{{/content}}